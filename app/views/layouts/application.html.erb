<!DOCTYPE html>
<html lang="ja">
  <head>
  <title>Bookers2</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">


  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
           <%= link_to "Bookers", "/", class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
         <ul class="navbar-nav ml-auto">
           <% if user_signed_in? %>
           <%= link_to  user_path(current_user), class: "nav-link text-light" do %>
           <i class="fas fa-home"></i>Home
           <% end %>
           <%= link_to  users_path, class: "nav-link text-light" do%>
           <i class="fas fa-users"></i>Users
           <% end %>
           <%= link_to  books_path, class: "nav-link text-light" do%>
           <i class="fas fa-book-open"></i>Books
           <% end %>
           <%= link_to  destroy_user_session_path, method: :delete, class: "nav-link text-light" do %>
           <i class="fas fa-sign-out-alt"></i>Log out
           <% end %>
        <% else %>
           <%= link_to root_path, class: "nav-link text-light" do %>
           <i class="fas fa-home"></i>
            Home
        <% end %>

           <%= link_to "/home/about", class: "nav-link text-light" do %>
           <i class="fas fa-link"></i>
            About
           <% end %>

           <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
           <i class="fas fa-user-plus"></i>
            Sign up
           <% end %>

           <%= link_to "/users/sign_in", class: "nav-link text-light" do %>
           <i class="fas fa-sign-in-alt"></i>
            Log in
           <% end %>
           <% end %>
         </ul>
        </div>
        </div>
      </nav>
      <div>
       <%= flash[:notice] %>
      </div>
    </header>
    <main class="mb-auto">
    <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
</footer>

  </body>
</html>
