<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h1>User info</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
      <%= form_with model: @user do |f| %>
       <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control user_name' %>
       </div>
       <div class="form-group">
        <label for="user_image">Image</label><br>
        <%= f.file_field :profile_image, accept: "image/*" %>
       </div>
       <div class="form-group">
        <%= f.label :Introduction%>
        <%= f.text_area :introduction, class: "form-control", id: "user_introduction" %>
       </div>
       <div class="form-group">
        <%= f.submit 'Update User',class:'btn btn-secondary' %>
       <% end %>